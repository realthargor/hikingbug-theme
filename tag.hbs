{{!< default}}

{{#tag}}

{{> page-header}}


<!--   Main Content   -->
<div class="container">
  <div class="section">
    <div class="row">
      <div class="col s12 m9 push-m1">
        <article class="tag">
          <header class="section no-pad-bot center-align">
            <h1 class="header center black-text">{{name}}</h1>
          </header>

          {{description}}
        </article>
      </div>
    </div>
{{/tag}}

    <div class="row">

        <!-- This is the post loop - each post will be output using this markup -->
        {{#foreach posts}}
          <main class="col s12 m6 l4">
            {{> tag-card}}
          </main>
        {{/foreach}}

    </div>
    <div class="row">
      {{pagination}}
    </div>
  </div>
</div>
