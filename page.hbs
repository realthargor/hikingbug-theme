{{!< default}}

{{#post}}

{{> page-header}}

<main class="container">
  <section class="section">
    <div class="row">
      <div class="col s12 m9">
        <article class="{{post_class}}">
          <header class="section no-pad-bot center-align">
            <h1 class="header center black-text">{{title}}</h1>
          </header>

          {{content}}
        </article>
      </div>

      <aside class="col s12 m3">
        {{> sidebar}}
      </aside>
    </div>
  </section>
</main>

{{/post}}
